<%= simple_form_for(@user, :url => { :action => "update_password"}, html: {class: 'form-horizontal'}) do |f| %>
	<div class="control-group">
		<%= f.input :email, :input_html => { class: 'span9' }   %>
		<%= f.input :current_password, :input_html => { class: 'span9' }   %>
	  <%= f.input :password, autocomplete: "off", label: "New Password", :input_html => { class: 'span9' }   %>
	  <%= f.input :password_confirmation, label: "Confirm New Password", :input_html => { class: 'span9' }   %>
	</div>
	<div class="btn-group-wrap">
  	<div class="btn-group">
			<%= f.button :submit, class: 'btn btn-primary'  %>
		</div>
	</div>
<% end %>
