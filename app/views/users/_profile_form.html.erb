<%= simple_form_for @user do |f| %>
	<%= f.input :first_name %>
	<%= f.input :last_name %>
	<%= f.input :bio, :input_html => { class: 'span6', rows: '3' } %>
	<%= f.input :home_town %>
	<%= f.input :mountain_id, as: :select, collection: Mountain.all, label_method: :name, value_method: :id, label: "Home Mountain"%>
	<%= f.button :submit %>
<% end %> 