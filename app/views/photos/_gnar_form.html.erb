<div class="gnar_form">	
	<div class="gnar-button">
	<% if current_user.present? then %>
		<% if @gnars.find_by_user_id(current_user.id) %>
		<!-- User is signed in and has already given gnar -->
			<%= render :partial => 'photos/ungnar' %> 
		<% else %>
			<%= render :partial => 'photos/gnar' %>
			<!-- User is signed in and has not given gnar -->
		<% end %>
	<% else %>
		<%= render :partial => 'photos/gnar' %>
	<% end %>
	</div>
	<div class="text-center">Total Gnar: <%= @photo.gnars.count %></div>
	<div class="text-center">Total Views: <%= @photo.views %></div>
</div>