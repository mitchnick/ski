<% provide(:title, @photo.name) %>
<p>Photo: <%= @photo.name %></p>
<p><%= link_to "Edit Photo", edit_mountain_photo_path(@mountain, @photo)%></p>
<p>Image: <%= @photo.image  %> </p>
<p>Image_url(:thumb): <%= @photo.image_url(:thumb) %> </p>
<p class="gnar_count">Gnar: <%= @photo.gnars.count %></p>
<div id="gnar_form"><%= render 'gnar_form' %></div>
<div id="photo_tags"><%= render 'tags_form' %></div>

<p>Mountain: <%= link_to @mountain.name, @mountain %> </p>
<ul>
	<%= render '/shared/show_relationship' %>
	<% @photo.attributes.each_pair do |h,v| %>
		<li><%= h.to_s %>: <%= v %></li>
	<% end %>
</ul>

<%= image_tag @photo.image_url if @photo.image? %>
<div id="disqus_thread"></div>
