<% if @photo.rider.present? %>
	<div class="row-fluid well photo-user">
		<div class="span4 user_photo"> <%= link_to user_image(@photo.rider, '',70), @photo.rider %> </div>
		<div class="span8"><p>Rider:</p><h4> <%= link_to @photo.rider.name, @photo.rider %></h4></div>
		<% if @photo.user == current_user then %>
			<%= link_to "Delete rider", remove_rider_photo_path(@mountain, @photo), remote: true %> 
		<% end %>
	</div>
<% end %>