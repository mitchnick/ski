<dl class="dl-horizontal">
	<% if @mountain.description.present? then %>
		<dt>About:</dt> <dd><%= @mountain.description.html_safe %></dd>
	<% end %><br>
	<% if @mountain.stats.present? then %>
		<dt>Stats:</dt> <dd><%= @mountain.stats.html_safe %></dd>
	<% end %><br>
	<% if @mountain.phone.present? then %>
		<dt>Phone:</dt> <dd><%= @mountain.phone %></dd>
	<% end %><br>
	<% if @mountain.web_link.present? then %>
		<dt>Website:</dt> <dd><%= link_to @mountain.web_link, @mountain.web_link %></dd>
	<% end %><br>
	<% if @mountain.tickets_link.present? then %>
		<dt>Discount Tickets:</dt> <dd><%= link_to @mountain.tickets_link, @mountain.tickets_link %></dd>
	<% end %><br>
</dl>